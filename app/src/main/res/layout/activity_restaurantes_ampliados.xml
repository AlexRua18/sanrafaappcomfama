<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".restaurantes_ampliados">

    <TextView
        android:id="@+id/tituloampliadoRestaurantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Prueba de titulo"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.05"
        />
    <ImageView
        android:id="@+id/FotoampliadoRestaurantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tituloampliadoRestaurantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:src="@drawable/hotel1"
        android:adjustViewBounds="true"
        />
    <TextView
        android:id="@+id/nombrerestaurantemolde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/FotoampliadoRestaurantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0"
        android:text="Hotel Tinny House"
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/preciorestaurantemolde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/FotoampliadoRestaurantes"
        app:layout_constraintStart_toEndOf="@+id/nombrerestaurantemolde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="50000"
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/descripcionrestaurantemolde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/preciorestaurantemolde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/telefonorestaurantemolde"
        app:layout_constraintVertical_bias="0"
        android:text="Descripcion del hotel selecionado"
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/telefonorestaurantemoldetexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/descripcionrestaurantemolde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/telefonorestaurantemolde"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:text="Telefono"
        app:layout_constraintHorizontal_bias="0.01"
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/telefonorestaurantemolde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="3215588963"
        android:textSize="18dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toEndOf="@+id/telefonorestaurantemoldetexto"
        app:layout_constraintTop_toBottomOf="@+id/descripcionrestaurantemolde"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/direccionrestaurantemolde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/telefonorestaurantemolde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="cll123 #78-96"
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/calificacionampliandorestaurantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calificacion : 5.0"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/direccionrestaurantemolde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>