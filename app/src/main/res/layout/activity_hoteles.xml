<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hoteles">

    <ImageView
        android:id="@+id/bannerhoteles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/bannerhotel"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/titulohoteles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bannerhoteles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/titulohomehoteles"
        android:textSize="28dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.05"
        />

    <TextView
        android:id="@+id/descripcionhoteles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titulohoteles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/descripcionhomehoteles"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.05"
/>
    <ImageView
    android:id="@+id/manohoteles"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/mano"
    app:layout_constraintTop_toBottomOf="@id/descripcionhoteles"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.2"
    app:layout_constraintVertical_bias="0.3"
    />

    <ImageButton
    android:id="@+id/botonhomehoteles"
    android:layout_width="128dp"
    android:layout_height="128dp"
    android:src="@drawable/botonhoteles"
    app:layout_constraintTop_toBottomOf="@id/descripcionhoteles"
    app:layout_constraintStart_toStartOf="@id/manohoteles"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.6"
    app:layout_constraintVertical_bias="0.3"

    />


</androidx.constraintlayout.widget.ConstraintLayout>