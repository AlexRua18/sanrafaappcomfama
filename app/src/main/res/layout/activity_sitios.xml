<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25D6C7"
    tools:context=".Sitios">

    <TextView
        android:id="@+id/titulositios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/titulohomesitios"
        android:textSize="28dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.05"
        android:textColor="@color/coral"
        />

    <TextView
        android:id="@+id/descripcionsitios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/descripcionhomesitios"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/azure"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulositios"
        app:layout_constraintVertical_bias="0.073" />

    <ImageView
        android:id="@+id/bannersitios"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="true"
        android:src="@drawable/sitios"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintEnd_toStartOf="@+id/bannersitios2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descripcionsitios"
        app:layout_constraintBottom_toTopOf="@+id/botonhomesitios"
        android:scaleType="fitXY"
        />

    <ImageView
        android:id="@+id/bannersitios2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="true"
        android:src="@drawable/fondositios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/bannersitios"
        app:layout_constraintTop_toBottomOf="@id/descripcionsitios"
        app:layout_constraintBottom_toTopOf="@+id/botonhomesitios"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/botonhomesitios"
        android:layout_width="350dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/bannersitios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_bias="0.5"
        android:textSize="25dp"
        android:backgroundTint="@color/coral"
        android:text="@string/Botonhomesitios"

        />

</androidx.constraintlayout.widget.ConstraintLayout>